mixin postlist(list)
  ul.post-list
    - site.posts.each(function (item) {
      li.post-list-item
          article.post-block
              h1.post-title
                  a.post-title-link(href= url_for(item.path))
                      != item.title
              // +postInfo(item)
              .post-content
                  != item.excerpt
              a.read-more(href= url_for(item.path))!= __('...more')
    - })
